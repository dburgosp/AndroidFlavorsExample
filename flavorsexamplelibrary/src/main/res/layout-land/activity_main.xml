<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        style="@style/LandscapeCardViewStyle"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout style="@style/LinearLayoutStyle">

            <ImageView
                style="@style/ImageViewStyle"
                android:contentDescription="@string/logo_adcolony_description"
                android:src="@drawable/logo_adcolony" />

            <TextView
                android:id="@+id/adcolony_textview"
                style="@style/TextViewStyle"
                tools:text="REGISTRADA" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/LandscapeCardViewStyle"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout style="@style/LinearLayoutStyle">

            <ImageView
                style="@style/ImageViewStyle"
                android:contentDescription="@string/logo_admob_description"
                android:src="@drawable/logo_admob" />

            <TextView
                android:id="@+id/admob_textview"
                style="@style/TextViewStyle"
                tools:text="Último registro: 12/02/2019 12:33" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/LandscapeCardViewStyle"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout style="@style/LinearLayoutStyle">

            <ImageView
                style="@style/ImageViewStyle"
                android:contentDescription="@string/logo_fbaudience_description"
                android:src="@drawable/logo_fbaudience" />

            <TextView
                android:id="@+id/fbaudience_textview"
                style="@style/TextViewStyle"
                tools:text="Último registro: 12/02/2019 12:33" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>